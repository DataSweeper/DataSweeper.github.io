<section id="login">
    <div class="container">
      <div class="row">
          <div class="col-xs-12">
              <div class="form-wrap">
                <h1>Log in</h1>
                    <form role="form" {{action 'authenticate' on='submit'}} id="login-form" autocomplete="off">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            {{input id='username' class="form-control" placeholder="admin" placeholder='Username' value=username}}
                        </div>
                        <div class="form-group">
                            <label for="key" class="sr-only">Password</label>
                            {{input class="form-control" placeholder="Password" type="password" id='password' placeholder='Password' type='password' value=password}}
                        </div>
                        <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Log in">
                          {{#if error}}
                          <div class="alert alert-danger">
                            <p>{{error}}</p>
                          </div>
                          {{/if}}
                    </form>
                    <hr>
              </div>
        </div> <!-- /.col-xs-12 -->
      </div> <!-- /.row -->
    </div> <!-- /.container -->
</section>